<% layout("/layouts/boilerplate.ejs") %>

    <div class="d-flex align-items-center">
        <div id="filters" class=" mt-2 pe-3 me-3">
            <a href="/listings/category?query=Trending">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-fire"></i>
                    </div>
                    <p>Trending</p>
                </div>
            </a>
            <a href="/listings/category?query=Rooms">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-bed"></i>
                    </div>
                    <p>Rooms</p>
                </div>
            </a>
            <a href="/listings/category?query=Amazing View">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-house-chimney-window"></i>
                    </div>
                    <p>AmazingView</p>
                </div>
            </a>
            
            <a href="/listings/category?query=Swimming">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-person-swimming"></i>
                    </div>
                    <p>Swimming</p>
                </div>
            </a>
            
            <a href="/listings/category?query=Ship">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-ship"></i>
                    </div>
                    <p>Ship</p>
                </div>
            </a>
            
            <a href="/listings/category?query=tent">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-campground"></i>
                    </div>
                    <p>tent</p>
                </div>
            </a>
            
            <a href="/listings/category?query=Breakfasts">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-mug-saucer"></i>
                    </div>
                    <p>Breakfasts</p>
                </div>
            </a>
            
            <a href="/listings/category?query=Mountain">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-mountain-sun"></i>
                    </div>
                    <p>Mountain</p>
                </div>
            </a>
            
            <a href="/listings/category?query=Camper Vans">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-truck-ramp-box"></i>
                    </div>
                    <p>CamperVans</p>
                </div>
            </a>
            
            <a href="/listings/category?query=Farm">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-tractor"></i>
                    </div>
                    <p>Farm</p>
                </div>
            </a>
            
            <a href="/listings/category?query=Arctic">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-person-snowboarding"></i>
                    </div>
                    <p>Arctic</p>
                </div>
            </a>
            
            <a href="/listings/category?query=Ghost">
                <div class="filter">
                    <div>
                        <i class="fa-solid fa-ghost"></i>
                    </div>
                    <p>GhostTent</p>
                </div>
            </a>     
        </div>
        <div class=" border rounded p-2" style="width: 23rem;">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked">
                <label class="form-check-label d-flex text-nowrap" for="flexSwitchCheckChecked">Display Total Before Taxes</label>
            </div>
        </div>
        
    </div>
    <% if(allListings.length > 0) { %>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let listing of allListings) { %>
                <a style="text-decoration: none;" class="" href="/listings/<%= listing._id %>" >
                    <div class="card col" >
                        <img src="<%= listing.image.url %>" class="card-img-top" alt="" style="height: 20rem;">
                        <div class="card-img-overlay"><i class="fa-solid fa-heart"></i></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b><%= listing.title%></b> <br>
                                &#8377;<%= listing.price.toLocaleString("en-IN")  %> /night
                                <i class="include-tax">&nbsp; +18% GST</i>
                            </p>
                        </div>
                    </div>
                </a>
            <% } %>
        </div>
    <% } else { %>
        <div class="text-center mt-5 mb-3 m-auto">
            <i class="fas fa-box-open text-secondary" style="font-size: 10rem;"></i>
            <h1 class="text-secondary">No listings available</h1>
        </div>
    <% } %>

